{
  "compilerOptions": {
    "target": "ES2019",
    "module": "Node16",
    "lib": ["ES2019"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["tests/fixtures"]
}
